#!/usr/bin/env php
<?php
/**
 * @author Damian Glinkowski <damianglinkowski@gmail.com>
 */

$loader = file_exists(__DIR__ . '/../../../autoload.php') ?
    require_once __DIR__ . '/../../../autoload.php' :
    require_once __DIR__ . '/../vendor/autoload.php';

use d0niek\GenericCollection\Generator\ArrayGeneratorCommand;
use d0niek\GenericCollection\Generator\ExamplesGeneratorCommand;
use d0niek\GenericCollection\Generator\VectorGeneratorCommand;
use Symfony\Component\Console\Application;

$app = new Application();

$app->add(new ArrayGeneratorCommand($loader));
$app->add(new ExamplesGeneratorCommand($loader));
$app->add(new VectorGeneratorCommand($loader));

$app->run();
